          <tp:taxon-name obkms_id="b3c6c069-7b06-4090-a8ff-7a6dfcb7eeac" obkms_process="TRUE">
            <tp:taxon-name-part taxon-name-part-type="genus">Spathelia</tp:taxon-name-part>
            <tp:taxon-name-part taxon-name-part-type="species">belizensis</tp:taxon-name-part>
